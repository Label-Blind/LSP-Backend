extends ../layout

block content
    div(class="content")
        div(class="container-fluid")
            
            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") Add FAQs Category
                            p(class="card-category") Add New FAQs Category

                        div(class="card-body")
                            include ../alert

                            form(action="/faqs/category-update/"+category.id method="post") 
                                div(class="row")
                                    div(class="col-md-12")
                                        div(class="form-group")
                                            label(class="bmd-label-floating ckeditor-area") Category Name
                                            input(type="text" name="cat_name" value=category.name class="form-control" id="category_name")
                                            

                                button(type="submit" class="btn btn-primary pull-right") Save

                                div(class="clearfix")