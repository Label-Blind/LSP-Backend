extends ../layout

block content
    div(class="content")
        div(class="container-fluid")
            
            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") Add FAQs Category
                            p(class="card-category") Add New FAQs Category

                        div(class="card-body")
                            include ../alert

                            form(action="/faqs/category-save" method="post") 
                                div(class="row")
                                    div(class="col-md-6")
                                        div(class="form-group")
                                            label(class="bmd-label-floating" ) Category Name
                                            input(type="text" name="cat_name" class="form-control") 

                                    div(class="col-md-6")
                                        button(type="submit" class="btn btn-primary pull-right") Save                              

                                div(class="clearfix")