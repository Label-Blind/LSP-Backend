extends ../layout

block content
    
    div(class="content")
        div(class="container-fluid")
            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") All Users 
                            p(class="card-category") Users details

                        div(class="card-body")
                            include ../alert
                            div(class="table-responsive material-datatables")
                                table(id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%")
                                    thead(class=" text-primary")
                                        tr
                                            th #
                                            th User ID
                                            th Name
                                            th Email
                                            th Phone
                                            th Action
                                    
                                    tbody
                                        each company,index in users
                                            //- li= user
                                            tr
                                                td= index+1
                                                td= company._id
                                                td 
                                                    if (company.operator == "business")
                                                        span= company.company_name
                                                    else
                                                        span= company.name
                                                td= company.email
                                                td= company.phone
                                                td
                                                    a(href="/users/details/"+company._id class="btn btn-link btn-warning btn-just-icon" title="View Details") 
                                                        i(class="material-icons") visibility

                                                    a(href="/users/delete/"+company._id class="btn btn-link btn-danger btn-just-icon" onclick="return confirm('Are You sure want to delete?');" title="Delete CMS") 
                                                        i(class="material-icons") delete
                                                