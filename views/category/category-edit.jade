extends ../layout

block content
    div(class="content")
        div(class="container-fluid")
            
            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") Edit Category
                            p(class="card-category") Update Category 

                        div(class="card-body")
                            include ../alert

                            form(action="/categories/update/"+category._id method="post") 
                                div(class="row")
                                    div(class="col-md-3")
                                        div(class="form-group ")
                                            //- label(class="bmd-label-floating") Select Category
                                            select(class="form-control" name="parent")
                                                option(disabled="disabled") Select Category
                                                option(value="/" selected=(category.parent === "/") ? true : false) Parent Category
                                                each cat,index in categories
                                                    option(value="/"+cat.name selected=(category.parent === "/"+cat.name) ? true : false)= cat.name
                                    
                                    div(class="col-md-3")
                                        div(class="form-group")
                                            label(class="bmd-label-floating") Code
                                            input(type="text" name="code" class="form-control" value=category.code) 

                                    div(class="col-md-6")
                                        div(class="form-group")
                                            label(class="bmd-label-floating") Name
                                            input(type="text" name="name" value=category.name class="form-control")                              

                                div(class="row")
                                    div(class="col-md-12")
                                        div(class="form-group")
                                            label(class="bmd-label-floating") description
                                            textarea(name="description" cols="5" rows="5" class="form-control")= category.description

                                button(type="submit" class="btn btn-primary pull-right") Save

                                div(class="clearfix")