extends ../layout

block content
    
    div(class="content")
        div(class="container-fluid")
            div(class="row")
                div(class="col-md-12")
                    a(href="/faqs/add" class="pull-right btn btn-primary") Add New

            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") All Faqs 
                            p(class="card-category") Faqs lists

                        div(class="card-body")
                            include ../alert
                            div(class="material-datatables table-responsive")
                                table(id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%")
                                    thead(class="text-primary")
                                        tr
                                            th #
                                            th Category
                                            th Question
                                            //- th Answer
                                            th Action
                                    
                                    tbody
                                        each res,index in faqs
                                            console.log(res)
                                            //- li= user
                                            tr
                                                td= index+1
                                                td= res.category
                                                td= res.question
                                                //- td= res.answer 
                                                td
                                                    a(href="/faqs/view/"+res._id class="btn btn-link btn-info btn-just-icon" title="View CMS") 
                                                        i(class="material-icons") visibility

                                                    a(href="/faqs/edit/"+res._id class="btn btn-link btn-warning btn-just-icon" title="Edit CMS") 
                                                        i(class="material-icons") create
                                                    
                                                    a(href="/faqs/delete/"+res._id class="btn btn-link btn-danger btn-just-icon" onclick="return confirm('Are You sure want to delete?');" title="Delete CMS") 
                                                        i(class="material-icons") delete
                                                