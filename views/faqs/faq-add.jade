extends ../layout

block content
    div(class="content")
        div(class="container-fluid")
            
            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") Add FAQs
                            p(class="card-category") Add new FAQs

                        div(class="card-body")
                            include ../alert

                            form(action="/faqs/save" method="post") 
                                div(class="row")
                                    div(class="col-md-4")
                                        select(class="form-control" name="category")
                                            option(disabled="disabled") Select Category
                                            each category,index in categories
                                                option(value=category.name)= category.name

                                    div(class="col-md-8")
                                        div(class="form-group")
                                            label(class="bmd-label-floating" ) Question
                                            input(type="text" name="question" class="form-control")                              

                                div(class="row")
                                    div(class="col-md-12")
                                        div(class="form-group")
                                            label(class="bmd-label-floating ckeditor-area") Answer
                                            textarea(name="answer" cols="5" rows="5" class="form-control" id="answer")
                                            

                                button(type="submit" class="btn btn-primary pull-right") Save

                                div(class="clearfix")