extends ../layout

block content

    div(class="content")
        div(class="container-fluid")
            div(class="row")
                div(class="col-md-12")
                    div(class="card")
                        div(class="card-header card-header-primary")
                            h4(class="card-title") FAQs Details
                            p(class="card-category") FAQs details

                        div(class="card-body")
                            include ../alert
                            div(class="row")
                                div(class="col-lg-6 col-md-6 col-sm-6")
                                    div(class="card detail-card" )
                                        div(class="card-header ")
                                            h4(class="card-title") FAQs Category : 
                                                h3(class="card-text")= faq.category
                            
                                div(class="col-lg-6 col-md-6 col-sm-6")
                                        div(class="card detail-card" )
                                            div(class="card-header ")
                                                h4(class="card-title") FAQs Question : 
                                                    h3(class="card-text")= faq.question
                            
                                div(class="col-lg-12 col-md-6 col-sm-6")
                                        div(class="card detail-card" )
                                            div(class="card-header ")
                                                h4(class="card-title") FAQs Answer : 
                                                    h3(class="card-text" )!= faq.answer

                                